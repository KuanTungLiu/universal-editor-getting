        "options": [
          {
            "name": "無按鈕",
            "value": "none"
          },
          {
            "name": "只有主按鈕",
            "value": "main-only"
          },
          {
            "name": "主按鈕及次按鈕",
            "value": "main-and-sub"
          }
        ]
      },
      {
        "component": "fieldset",
        "name": "mainButtonSettings",
        "label": "Main Button Settings / 主要按鈕設定",
        "showIf": "buttonCount == 'main-only' || buttonCount == 'main-and-sub'",
        "fields": [
          {
            "component": "aem-content",
            "name": "mainButtonLink",
            "label": "Main Button Link / 主要按鈕連結",
            "required": true
          },
          {
            "component": "text",
            "name": "mainButtonText",
            "label": "重要公告",
            "required": true
          }
        ]
      },
      {
        "component": "fieldset",
        "name": "subButtonSettings",
        "label": "Sub Button Settings / 次要按鈕設定",
        "showIf": "buttonCount == 'main-and-sub'",
        "fields": [
          {
            "component": "aem-content",
            "name": "subButtonLink",
            "label": "Sub Button Link / 次要按鈕連結",
            "required": true
          },
          {
            "component": "text",
